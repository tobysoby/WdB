    <artikel id="a1167">
        <kategorie>
            <kat id="k11"/>
        </kategorie>
        <lemma>Innentitel</lemma>
        <l_zusatz>. </l_zusatz>
        <bedeutung><absatz><text>Allgemein jeder </text><verweis idref="a0000">Titel</verweis><text>, der im
                Buch nach dem </text><verweis idref="a0000" >Haupt- oder Gesamttitel</verweis><text>
                steht (zum Beispiel </text><verweis idref="a0000" >Kopf-</verweis><text>, </text><verweis
                    idref="a0000" >Stück-</verweis><text> oder </text><verweis idref="a0000"
                    >Zwischentitel</verweis><text>). Ist ein besonders </text><verweis idref="a0000"
                    >Schmutz-</verweis><text> oder </text><verweis idref="a0000"
                    >Umschlagtitel</verweis><text> vorhanden, so kann auch der Haupttitel ein Innentitel
                sein.</text></absatz></bedeutung>
